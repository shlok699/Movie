    let currentHeroIndex = 0;

    function updateHeroSection() {
      const movie = heroMovies[currentHeroIndex];
      const section = document.getElementById("heroSection");
      const title = document.getElementById("heroTitle");
      const desc = document.getElementById("heroDesc");

      gsap.to(title, { opacity: 0, y: -20, duration: 0.4 });
      gsap.to(desc, { opacity: 0, y: -20, duration: 0.4, onComplete: () => {
        section.style.backgroundImage = `url('${movie.bg}')`;
        title.textContent = movie.title;
        desc.textContent = movie.description;
        gsap.fromTo(title, { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.5 });
        gsap.fromTo(desc, { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.5 });
      }});

      currentHeroIndex = (currentHeroIndex + 1) % heroMovies.length;
    }

    setInterval(updateHeroSection, 5000); // Change every 5 seconds
